generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id       String    @id @default(uuid())
  fullName String
  email    String    @unique
  street   String?
  lote     String?
  phone    String?
  payments Payment[]
}

model Payment {
  id          String   @id @default(uuid())
  clientId    String
  client      Client   @relation(fields: [clientId], references: [id])
  date        DateTime
  paymentType String   @default("Transferencia")
  amount      Float
  amountText  String   @default("")
  concept     String
  receiptPdf  String?
}
