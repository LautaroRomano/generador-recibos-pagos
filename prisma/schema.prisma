generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id       String    @id @default(uuid())
  fullName String
  email    String?    
  street   String?
  lote     String?
  phone    String?
  payments Payment[]
}

model Payment {
  id        String   @id @default(cuid())
  clientId  String
  client    Client   @relation(fields: [clientId], references: [id])
  date      DateTime
  number    Int
  paymentType String
  amountText String?
  concepts  PaymentConcept[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PaymentConcept {
  id          String   @id @default(cuid())
  paymentId   String
  payment     Payment  @relation(fields: [paymentId], references: [id], onDelete: Cascade)
  conceptType String
  amount      Float
  detail      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([paymentId])
}

model Admin {
  id        String   @id @default(uuid())
  email     String   
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
